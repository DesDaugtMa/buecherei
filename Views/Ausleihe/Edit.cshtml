@model Buecherei.Models.Ausleihe

@{
    ViewData["Title"] = "Edit";
}

<h1>Bearbeiten</h1>

<h4>Ausgeliehenes Buch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Zaehler" />
            <div class="form-group">
                <label asp-for="Buchnummer" class="control-label"></label>
                <input asp-for="Buchnummer" class="form-control" asp-items="ViewBag.Buchnummer">
                <span asp-validation-for="Buchnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ausweisnummer" class="control-label"></label>
                <input asp-for="Ausweisnummer" class="form-control" asp-items="ViewBag.Ausweisnummer">
                <span asp-validation-for="Ausweisnummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ausleihdatum" class="control-label"></label>
                <input asp-for="Ausleihdatum" class="form-control" />
                <span asp-validation-for="Ausleihdatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Retourdatum" class="control-label"></label>
                <input asp-for="Retourdatum" class="form-control" />
                <span asp-validation-for="Retourdatum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-light">Zurück zur Listet</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
